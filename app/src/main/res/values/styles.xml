<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorPrimaryVariant">@color/gray_800</item>
        <item name="colorOnPrimary">@color/gray_100</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/gray_800</item>

        <item name="colorSecondary">@color/green_a_200</item>
        <item name="colorSecondaryVariant">@color/green_a_100</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <item name="colorSurface">@color/blue_gray_300</item>
        <item name="colorOnSurface">@android:color/white</item>

        <item name="shapeAppearanceMediumComponent">@style/CutCornerMediumShape</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="CutCornerMediumShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

</resources>